<!DOCTYPE html>
<html>
  <head>
    <title>Nameofapp</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <% if notice %>
      <p id="notice" class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p id="alert" class="alert alert-info"><%= alert %></p>
    <% end %>

  	<nav id="nav">
      <ul>
  	   <li role="presentation"><%= link_to "Home", root_path %></li>
       <li role="presentation"><%= link_to "About", simple_pages_about_path %></li>
       <li role="presentation"><%= link_to "Contact", simple_pages_contact_path %></li>
       <li role="presentation"><%= link_to "Products", products_path %></li>
       <li role="presentation"><%= link_to "Orders", orders_path %></li>
       <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
         <%= form.label :q, 'Search for:' %>
         <%= form.text_field :q, id: 'q', value: params[:q] %>
         <%= form.submit 'Search' %>
       <% end %>
      </ul>
      <ul class="nav pull-right">
        <li>
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          <% else %>
            <%= link_to('Login', new_user_session_path) %>
          <% end %>
        </li>
      </ul>
	  </nav>

    <%= yield %>
  </body>

  <footer class="site-footer">
  	&copy; 2017 Munich Munchies
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </footer>
</html>
